<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping  xmlns="urn:nhibernate-mapping-2.2" namespace="DinX.Common.Domain" assembly="DinX.Common">
  <class name="User" table="User">
    <id name="Id" column="UserId">
      <generator class="guid" />
    </id>
    <property name="Username" not-null="true"/>
    <property name="Password" not-null="true"/>
    <property name="Firstname" />
    <property name="Lastname" />
    <property name="EMail" />
    <bag name="Projects" table="ProjectMember">
      <key column="UserId"/>
      <many-to-many class="DinX.Common.Domain.Project" column="ProjectId"/>
    </bag>
    <bag name="Tasks" table="TaskMember">
      <key column="UserId"/>
      <many-to-many class="DinX.Common.Domain.Task" column="TaskId"/>
    </bag>
  </class>
</hibernate-mapping>